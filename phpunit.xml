<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="true"
         backupStaticAttributes="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnError="true"
         stopOnFailure="true"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         bootstrap="CacheDecorator/Autoload.php"
         strict="true"
         verbose="true">
    <testsuites>
        <testsuite name="CacheDecorator">
            <directory>Tests</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html"   target="build/coverage" 
             title="CacheDecorator" charset="UTF-8" 
             yui="true"             highlight="true"
             lowUpperBound="35"     highLowerBound="70"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
        <log type="junit"           target="build/logs/junit.xml" 
             logIncompleteSkipped="false"/>
    </logging>

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">CacheDecorator</directory>
            <exclude>
                <file>CacheDecorator/Autoload.php</file>
            </exclude>
        </whitelist>
    </filter>

    <php>
        <includePath>CacheDecorator</includePath>
    </php>
</phpunit>
